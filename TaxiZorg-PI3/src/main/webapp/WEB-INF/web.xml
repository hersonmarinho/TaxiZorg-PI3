<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>servlet.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViagemServlet</servlet-name>
        <servlet-class>servlet.ViagemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RelatorioServlet</servlet-name>
        <servlet-class>servlet.RelatorioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DesativarUsuarioServlet</servlet-name>
        <servlet-class>servlet.DesativarUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConcluirViagemServlet</servlet-name>
        <servlet-class>servlet.ConcluirViagemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelarViagemServlet</servlet-name>
        <servlet-class>servlet.CancelarViagemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarUsuarioServlet</servlet-name>
        <servlet-class>servlet.AlterarUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/MainServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViagemServlet</servlet-name>
        <url-pattern>/Cadastrar/Viagem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RelatorioServlet</servlet-name>
        <url-pattern>/relatorios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DesativarUsuarioServlet</servlet-name>
        <url-pattern>/DesativarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConcluirViagemServlet</servlet-name>
        <url-pattern>/Concluir/Viagem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelarViagemServlet</servlet-name>
        <url-pattern>/Cancelar/Viagem</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AlterarUsuarioServlet</servlet-name>
        <url-pattern>/Usuario/Alterar</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
